= search_form_for(q) do |f|
  .card.mb-3
    .card-header.bg-dark
      .form-inline
        .text-white
          = f.label :word_or_meaning_cont, '検索', class: 'text-sm mr-md-2'
        .input-group
          = f.search_field :word_or_meaning_cont, class: 'form-control form-control-sm'
          .input-group-append
            %button.btn.btn-default.bg-primary.btn-sm{ type: 'submit' }
              %i.fas.fa-search
    .card-body
      .form-row
        .col
          .form-group.mr-md-2
            = f.label :word_cont, 'オタク用語から検索', class: 'text-sm mr-md-2'
            = f.search_field :word_cont, class: 'form-control form-control-sm'
        .col
          .form-group.mr-md-2
            = f.label :meaning_cont, '標準語から検索', class: 'text-sm mr-md-2'
            = f.search_field :meaning_cont, class: 'form-control form-control-sm'
        .col
          .form-group.mr-md-2
            = f.label :categories_id_eq, 'カテゴリー', class: 'text-sm mr-md-2'
            = f.collection_select :categories_id_eq, Category.all, :id, :name, { include_blank: '指定なし' }, { class: 'form-control form-control-sm' }
    .card-footer
      .text-left
        = f.submit'検索', class: 'btn btn-primary'
